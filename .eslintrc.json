{
    "globals": {
        "Meteor": true,
        "$": true,
        "_": true,
        "Template": true,
        "_app": true,
        "ReactiveVar": true,
        "Npm": true,
        "FormatNumber": true,
        "Collections": true,
        "Prices": true,
        "EJSON": true,
        "FlowRouter": true,
        "S": true,
        "moment": true,
        "CRON": true,
        "ClientStorage": true,
        "check": true,
        "Match": true,
        "Tracker": true,
        "Base64": true
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "error", 
            {
                "allow": ["warn", "error", "info", "log", "trace"]
            }
        ]
    }
}